{
  "name": "letswatch",
  "version": "1.0.0",
  "main": "electron/main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/taalhaakaagaan/Lets-Watch.git"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "client": "npm run dev --prefix client",
    "electron": "wait-on http://localhost:5173 && cross-env ELECTRON_START_URL=http://localhost:5173 electron .",
    "dist": "npm run build --prefix client && electron-builder --win",
    "dist:linux": "npm run build --prefix client && electron-builder --linux",
    "dist:all": "npm run build --prefix client && electron-builder --win --linux"
  },
  "build": {
    "appId": "com.letswatch.app",
    "productName": "Lets Watch",
    "files": [
      "electron/**/*",
      "client/dist/**/*",
      "package.json"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Video"
    }
  },
  "keywords": [],
  "author": "Talha KaÄŸan Tosun <talhakaagantosun@gmail.com>",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.2.7",
    "electron-builder": "^26.4.0",
    "wait-on": "^9.0.3"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^5.2.1",
    "socket.io": "^4.8.3"
  }
}